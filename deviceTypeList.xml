<!--
List the device type and their specifications
such as the way to authenticate
-->

<xml>
	<devices>
		<device>
			<name>ISR</name>
			<vendor>Cisco</vendor>
			<upgrade>
				<upgradefile>file.gwios</upgradefile>
				<destination>flash:</destination>
				<checkdiskspace>show flash: | i bytes available</checkdiskspace>
				<filedelete>delete flash:</filedelete>
				<startupgrade>'copy ftp://'+system.network.1.ip+'/'+file.gwios+'@'+config.ftpuser+':'+ftppassword+' flash:'+file.gwios</startupgrade>
				<checkfile>'verify flash:'+file.gwios</checkfile>
				<boot>
					<write>no boot system</write>
					<write>'boot system flash:'+file.gwios</write>
				</boot>
			</upgrade>
			<howtoconnect><!--Used only with telnet connection-->
				<waitfor>Username:</waitfor>
				<write>device.user</write>
				<write>device.password</write>
			</howtoconnect>
			<howtosave>
				<write>copy running-config startup-config</write>
				<write></write>
				<waitfor>[OK]</waitfor>
			</howtosave>
			<howtoreboot>
				<write>reload</write>
				<write></write>
			</howtoreboot>
		</device>
		<device>
			<name>VG</name>
			<vendor>Cisco</vendor>
			<howtoconnect><!--Used only with telnet connection-->
				<waitfor>Username:</waitfor>
				<write>device.user</write>
				<write>device.password</write>
			</howtoconnect>
			<howtosave>
				<write>copy running-config startup-config</write>
				<write></write>
				<waitfor>[OK]</waitfor>
			</howtosave>
			<howtoreboot>
				<write>reload</write>
				<write></write>
			</howtoreboot>
		</device>
	</devices>
</xml>