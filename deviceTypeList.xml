<!--
List the device type and their specifications
such as the way to authenticate
-->

<xml>
	<devices>
		<device>
			<name>ISR</name>
			<vendor>Cisco</vendor>
			<upgrade>
				<upgradefile>file.gwios</upgradefile>
				<checkhardware>
					<write>show inventory | i hassis</write><!--"hassis" for Chassis without the C is on purpose-->
				</checkhardware>
				<checkcurrentversion>
					<writethenregex>show version | i image file:::".*:(.*)"</writethenregex>
				</checkcurrentversion>
				<checkdiskspace>
					<write>show flash: | i bytes</write>
				</checkdiskspace>
				<checkexistingfile>
					<write>show flash: | i file.gwios</write>
				</checkexistingfile>
				<filedelete>
					<write>delete flash:</write>
					<write></write>
				</filedelete>
				<startupgrade>
					<write>'copy ftp://'+system.network.0.ip+'/'+file.gwios+'@'+config.ftpuser+':'+config.ftppassword+' flash:'+file.gwios</write>
					<write></write>
					<waitforever>[OK]</waitforever>
				</startupgrade>
				<checkfile>
					<write>'verify flash:'+file.gwios</write>
				</checkfile>
				<boot>
					<write>configure terminal</write>
					<write>no boot system</write>
					<write>'boot system flash:'+file.gwios</write>
					<write>exit</write>
					<save></save>
				</boot>
			</upgrade>
			<howtoconnect>
				<waitfor>Username:</waitfor>
				<write>device.user</write>
				<write>device.password</write>
			</howtoconnect>
			<howtosave>
				<write>copy running-config startup-config</write>
				<write></write>
				<waitfor>[OK]</waitfor>
			</howtosave>
			<howtoreboot>
				<write>reload</write>
				<write></write>
				<disconnect></disconnect>
			</howtoreboot>
		</device>
		<device>
			<name>CUCM</name>
			<vendor>Cisco</vendor>
			<upgrade>
				<upgradefile>file.gwios</upgradefile>
				<checkcurrentversion>
					<write>show version | i System image file</write>
				</checkcurrentversion>
				<checkdiskspace>
					<write>show flash: | i bytes available</write>
				</checkdiskspace>
				<checkexistingfile>
					<write>show flash: | i bin</write>
				</checkexistingfile>
				<filedelete>
					<write>delete flash:</write>
					<write></write>
				</filedelete>
				<startupgrade>
					<write>'copy ftp://'+system.network.0.ip+'/'+file.gwios+'@'+config.ftpuser+':'+ftppassword+' flash:'+file.gwios</write>
					<write></write>
				</startupgrade>
				<checkfile>
					<write>'verify flash:'+file.gwios</write>
				</checkfile>
				<boot>
					<write>no boot system</write>
					<write>'boot system flash:'+file.gwios</write>
					<save></save>
				</boot>
			</upgrade>
			<howtoconnect><!--Used only with telnet connection-->
				<waitfor>Username:</waitfor>
				<write>device.user</write>
				<write>device.password</write>
			</howtoconnect>
			<howtosave>
				<write>copy running-config startup-config</write>
				<write></write>
				<waitfor>[OK]</waitfor>
			</howtosave>
			<howtoreboot>
				<write>utils system restart</write>
				<write>yes</write>
				<wait>10000</wait>
			</howtoreboot>
		</device>
	</devices>
</xml>